<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ui.DetailsFragment">

    <include layout="@layout/toolbar" />

    <Button
        android:id="@+id/calls_id"
        android:layout_width="205dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:background="@android:color/transparent"
        android:textSize="20sp"
        android:text="@string/details_calls_label"/>

    <Button
        android:id="@+id/sms_id"
        android:layout_width="205dp"
        android:layout_height="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:background="@android:color/transparent"
        android:textSize="20sp"
        android:text="@string/details_sms_label"/>

    <FrameLayout
        android:id="@+id/fragment_details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        app:layout_constraintTop_toBottomOf="@+id/calls_id">
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>