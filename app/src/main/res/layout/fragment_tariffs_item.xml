<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginHorizontal="25dp">

    <ImageView
        android:id="@+id/tariffs_operator_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorPrimary"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/tariffs_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toRightOf="@id/tariffs_operator_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        tools:text="Безлимитный"/>

    <TextView
        android:id="@+id/tariffs_gigabytes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/tariffs_name"
        app:layout_constraintTop_toBottomOf="@id/tariffs_name"
        tools:text="10 ГБ"/>

    <TextView
        android:id="@+id/tariffs_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toRightOf="@id/tariffs_gigabytes"
        app:layout_constraintTop_toBottomOf="@id/tariffs_name"
        tools:text="200 смс"/>

    <TextView
        android:id="@+id/tariffs_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toRightOf="@id/tariffs_sms"
        app:layout_constraintTop_toBottomOf="@id/tariffs_name"
        tools:text="100 р/мес."/>

</androidx.constraintlayout.widget.ConstraintLayout>