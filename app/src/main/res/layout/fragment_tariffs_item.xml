<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="center|top"
    android:layout_margin="4pt"
    android:layout_height="120dp">

    <View
        android:id="@+id/tariffs_operator_icon"
        android:layout_width="8pt"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorPrimary"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/tariffs_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4pt"
        app:layout_constraintLeft_toRightOf="@id/tariffs_operator_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/black"
        android:textSize="10pt"
        tools:text="Безлимитный"/>

    <TextView
        android:id="@+id/operator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4pt"
        app:layout_constraintLeft_toRightOf="@id/tariffs_operator_icon"
        app:layout_constraintTop_toBottomOf="@+id/tariffs_name"
        android:textColor="@android:color/darker_gray"
        android:textSize="8pt"
        tools:text="Yota"/>

    <TextView
        android:id="@+id/tariffs_gigabytes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4pt"
        app:layout_constraintBottom_toBottomOf="@id/tariffs_operator_icon"
        app:layout_constraintLeft_toRightOf="@id/tariffs_operator_icon"
        tools:text="10 ГБ"/>

    <TextView
        android:id="@+id/tariffs_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toRightOf="@id/tariffs_gigabytes"
        app:layout_constraintBottom_toBottomOf="@id/tariffs_gigabytes"
        tools:text="200 смс"/>

    <TextView
        android:id="@+id/tariffs_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toRightOf="@id/tariffs_sms"
        app:layout_constraintBottom_toBottomOf="@id/tariffs_sms"
        tools:text="100 р/мес."/>

</androidx.constraintlayout.widget.ConstraintLayout>